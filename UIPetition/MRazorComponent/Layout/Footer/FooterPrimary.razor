<div class="container-fluid bg-footer py-3 @Class" style="background-image: linear-gradient(to right, #3a444a 39%, @RightGradientColor 150%)">
    <div class="text-white container d-flex flex-column flex-md-row justify-content-between align-items-center">
        @*logo*@
        <div class="d-none d-md-block">
            <img class="img-flatten-white" src="@LogoUrl" height="@LogoHeight" alt="@LogoAlt"/>
            <p class="d-none d-lg-block m-0 text-footer-secondary">&copy; Copyright. @CopyrightText</p>
        </div>
        
        @*number & socials*@
        <div class="d-flex flex-column flex-sm-row align-items-center">
            @*number*@
            <div class="me-0 me-sm-3">
                <p class="m-0 text-footer-secondary">@NumberSubtext</p>
                <div class="fs-1 fw-thin">
                    <i class="bi bi-telephone-fill"></i>
                    @ContactNumber
                </div>
            </div>
            <div class="vr d-none d-sm-block"></div>
            <div class="d-flex flex-row ms-0 ms-sm-3">
                @Socials
            </div>
        </div>
        
    </div>
    
    <div class="d-inline-block d-lg-none w-100 ">
        <hr/>
        <p class="m-0 text-align-center text-footer-secondary">&copy; Copyright. @CopyrightText</p>
    </div>
</div>

@code {
    [Parameter] public string? LogoUrl { get; set; }
    [Parameter] public string? LogoHeight { get; set; }   
    [Parameter] public string? LogoAlt { get; set; }
    [Parameter] public string? CopyrightText { get; set; }
    
    [Parameter] public string? Class { get; set; }
    [Parameter] public string? RightGradientColor { get; set; }
    
    
    [Parameter] public required string ContactNumber { get; set; }
    [Parameter] public required string NumberSubtext { get; set; }
    [Parameter] public RenderFragment? Socials { get; set; }
}